
#number of reads for compressed fq.gz files

zcat D1A_EDME220001852-1a_H223VDSX3_L3_1.fq.gz | echo $((`wc -l`/4))


---------------------------------------------------------------------------------------------------------
#reads number of reads for uncompressed fastq files 

awk '{s++}END{print s/4}' file.fastq

#or 

./count_reads.sh filename.fastq

------------------------------------------------------------------------------------------------------------

#number of reads for all uncompressed files in a folder with .gz extension - modify as necessary

for fname in *.gz; do
  echo "Processing $fname"
  echo "..$fname has `zcat $fname | wc -l | awk '{print $1 / 4}'` sequences"
done

